/**
 * Utilità per trovare elementi nel catalogo
 */
export const catalogUtils = {
  /**
   * Trova una categoria per ID
   */
  findCategory: (categoryId: string): Category | undefined => {
    return catalogData.find(cat => cat.id === categoryId);
  },

  /**
   * Trova una sottocategoria per ID all'interno di una categoria
   */
  findSubcategory: (categoryId: string, subcategoryId: string): Subcategory | undefined => {
    const category = catalogUtils.findCategory(categoryId);
    return category?.subcategories.find(sub => sub.id === subcategoryId);
  },

  /**
   * Trova un prodotto per ID
   */
  findProduct: (productId: string): Product | undefined => {
    for (const category of catalogData) {
      for (const subcategory of category.subcategories) {
        const product = subcategory.products.find(prod => prod.id === productId);
        if (product) return product;
      }
    }
    return undefined;
  },

  /**
   * Conta il totale dei prodotti
   */
  getTotalProducts: (): number => {
    return catalogData.reduce((total, category) => {
      return total + category.subcategories.reduce((subTotal, subcategory) => {
        return subTotal + subcategory.products.length;
      }, 0);
    }, 0);
  },

  /**
   * Ottieni tutti i prodotti featured
   */
  getFeaturedProducts: (): Product[] => {
    const featured: Product[] = [];
    catalogData.forEach(category => {
      category.subcategories.forEach(subcategory => {
        subcategory.products.forEach(product => {
          if (product.featured) featured.push(product);
        });
      });
    });
    return featured;
  },

  /**
   * Ottieni tutti i prodotti con badge
   */
  getBadgedProducts: (): Product[] => {
    const badged: Product[] = [];
    catalogData.forEach(category => {
      category.subcategories.forEach(subcategory => {
        subcategory.products.forEach(product => {
          if (product.badge) badged.push(product);
        });
      });
    });
    return badged;
  }
};