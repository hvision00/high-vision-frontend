---
// MissionSection.astro
export interface Props {
  title?: string;
  description?: string;
  buttonText?: string;
  buttonLink?: string;
}

const { 
  title = "Ci sono attività che nessuno ha tempo di seguire davvero, ma che vanno fatte. E vanno fatte bene.",
  description = "Per questo offriamo un supporto concreto su attività operative che richiedono tempo, attenzione e continuità. Lo facciamo lavorando fianco a fianco, con rispetto per i flussi e le priorità dell’azienda.",
  buttonText = "APPROFONDISCI",
  buttonLink = "/chi-siamo"
} = Astro.props;
---

<section class="relative bg-white w-full px-4 pb-24">
  <div class="relative mx-auto max-w-7xl">
    <div 
      class="relative overflow-hidden rounded-[25px] bg-blue-600 px-8 py-24 md:px-16 md:py-24"
      style="background-image: url('/images/bg-mission.svg'); background-size: 60% auto; background-position: center; background-repeat: no-repeat;"
    >
    <div class="absolute inset-0 bg-brand/50"></div>
      <!-- Overlay opzionale per migliorare la leggibilità del testo -->
      <div class="absolute inset-0 bg-blue-600/70 rounded-[25px]"></div>
      
      <!-- Contenuto -->
      <div class="relative z-10 mx-auto max-w-4xl text-center">
        <h2 class="mb-6 text-2xl font-light leading-relaxed text-white md:text-3xl lg:text-4xl">
          {title}
        </h2>
        
        {description && (
          <p class="mb-8 text-lg font-light text-white/90 md:text-xl">
            {description}
          </p>
        )}
        
        <a 
          href={buttonLink}
          class="inline-flex items-center gap-2 rounded-full bg-white px-6 py-3 text-sm font-medium text-blue-600 transition-all duration-300 hover:bg-gray-100 hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-blue-600"
        >
          {buttonText}
          <svg 
            xmlns="http://www.w3.org/2000/svg" 
            class="h-4 w-4" 
            fill="none" 
            viewBox="0 0 24 24" 
            stroke="currentColor"
          >
            <path 
              stroke-linecap="round" 
              stroke-linejoin="round" 
              stroke-width={2} 
              d="M12 4v16m8-8H4" 
            />
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  /* Stili aggiuntivi se necessari */
  @media (prefers-reduced-motion: reduce) {
    * {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
    }
  }
</style>